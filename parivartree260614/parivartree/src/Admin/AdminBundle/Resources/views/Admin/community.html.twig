{% extends "AdminAdminBundle:Admin:headerw.html.twig" %}

{% block body %}

<script type="text/javascript">

 function deletefunc(id, community){
	var con = confirm('Are you sure to delete '+community+' ? The record once deleted cannot be retrived back');
	if(con){
		var url = "{{ path('admin_admin_deletecommunity',{'id': "ID"}) }}";
		var urlset = url.replace('ID', id);
			window.open(urlset,"_self");
		return true;
	}else{
		return false;
	}
 }
</script>

<div class="container">
<div class="page-header">
        <h4>Community Details</h4>
</div>
<div class="row admin-header-btn">
        <a class="btn btn-primary pull-right" href="{{ path('admin_admin_communityadd')  }}">Add community</a>
</div>

<div class="table-responsive user-details">

<table class="table table-bordered">
        <thead>
        <tr>
                <th>Community</t>
                <th>Update</th>
        </tr>
        </thead>
        <tbody>

	{% for d in data %}
		
			<tr>
				<th>{{ d.parameter }}</th>
		
				
		<th><a href="{{ path('admin_admin_editcommunity',{'id': d.id }) }}">Edit</a>|<a href="#" onclick="deletefunc('{{ d.id }}', '{{ d.parameter }}')">Delete</a></th>

			</tr>
		
	{% endfor %}
	</tbody>
</table>
</div>
</div>

<div class="container">
<div>Now showing : {{ from }} to {{ to }} records</div>
<div>{% set page_count = -count//10 %}
<ul class="pagination">

  <li><a href="{{ path('admin_admin_community',{'offset':1}) }}">&laquo;</a></li>
{% for i in 1..-(page_count) %}

  <li><a href="{{ path('admin_admin_community',{'offset':i}) }}">{{ i }}</a></li>

{% endfor %}

  <li><a href="{{ path('admin_admin_community',{'offset':-(page_count)}) }}">&raquo;</a></li>
</ul>
</div>
</div>


</div>


{% endblock %}
